<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment2">

    <ScrollView
        android:scrollIndicators="none"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:backgroundTint="#F3F3F3"
                android:outlineAmbientShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/doa"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bookmark"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_width="40dp"
                            android:src="@drawable/baseline_bookmark_24"
                            android:layout_height="55dp"/>

                        <TextView
                            android:layout_toEndOf="@+id/bookmark"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:padding="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Doa Sehari-hari yang Mudah Dihafalkan"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"/>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="13dp"
                android:backgroundTint="#F3F3F3"
                android:outlineAmbientShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/doa3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bookmark2"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_width="40dp"
                            android:src="@drawable/baseline_bookmark_24"
                            android:layout_height="55dp"/>

                        <TextView
                            android:layout_toEndOf="@+id/bookmark2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:padding="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Pentingnya menghafal doa sehari-hari"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"/>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="13dp"
                android:backgroundTint="#F3F3F3"
                android:outlineAmbientShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/doa4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bookmark3"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_width="40dp"
                            android:src="@drawable/baseline_bookmark_24"
                            android:layout_height="55dp"/>

                        <TextView
                            android:layout_toEndOf="@+id/bookmark3"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:padding="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Kumpulan doa sehari-hari pendek"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"/>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</FrameLayout>